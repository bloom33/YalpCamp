<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>YelpCamp</title>

    <%# access to bootstrap css %>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
</head>

<body class="d-flex flex-column vh-100">
    <%- include('../partials/navbar') %>

        <main class="container mt-5">
            <%- include('../partials/flash') %>
                <%- body %>
        </main>

        <%- include('../partials/footer') %>

            <%# access to bootstrap js %>
                <script
                    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

                <%# bs-custom-file-input CDN to add JS functionality to file picker so it can display file names %>
                    <script
                        src="https://cdn.jsdelivr.net/npm/bs-custom-file-input/dist/bs-custom-file-input.min.js"></script>

                    <%# including the validateForms function so it can be accessed / used in the pages where the
                        boilerplate is included %>
                        <script src="/scripts/validateForms.js"></script>


                        <!-- <%# including the addFileNames function so it can be accessed / used in the pages where the
                            boilerplate is included %>
                            <script src="/javascripts/addFileNames.js"></script> -->

                        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
                        <script>$(".form-control").on("change", function () {
                                const form = document.querySelector('.form-control');
                                form.innerHTML = "";
                                let files = Array.from(this.files)
                                updatedFiles = files.map(f => { return f.name });
                                for (let i = 0; i < updatedFiles.length; i++) {
                                    if (updatedFiles[i].length > 15) {
                                        updatedFiles[i] = updatedFiles[i].slice(0, 9).concat(`...${updatedFiles[i].slice(-6)}`)
                                    }
                                }
                                let fileName = updatedFiles.join(", ")
                                if (files.length > 1) {
                                    return $(this).siblings(".form-label").addClass("selected").html(fileName)
                                }
                            });
                        </script>


</body>

</html>